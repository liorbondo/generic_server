#ifndef __FILESERVER_PROTOCOLOS__
#define __FILESERVER_PROTOCOLOS__

namespace adv_cpp
{

class RepoProtocol
{
public:
  RepoProtocol();
  // ~RepoProtocol() = default;
private:
  static const size_t MD5_SIZE = 33;
  struct
  {
    ssize_t m_size; /* -1 for invalid file */
    char    m_checkSum[MD5_SIZE]; 
  }FileServerHeader;
  
};





} // namespace adv_cpp

#endif /* #ifndef __FILE_SERVER_PROTOCOLOS__ */
